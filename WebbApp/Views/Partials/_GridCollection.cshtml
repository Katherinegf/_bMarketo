@model GridCollectionViewModel

@if (Model != null)
{
    <section class="grid-collection">
        <div class="container">
            @if (!string.IsNullOrEmpty(Model.Title))
            {
                <h1 class="heading">@Model.Title</h1>
            }

            @if (Model.Categories != null)
            {
                <ul class="breadcrumb">

                    @foreach (var category in Model.Categories)
                    {
                        <li><a class="link" href="#">@category</a></li>
                    }
                </ul>
            }

            @if (Model.GridItems != null)
            {
                <div class="row row-cols-4">

                    @foreach (var item in Model.GridItems)
                    {
                        <partial name="/Views/Partials/_GridCollectionItem.cshtml" model="item" />
                    }
                </div>
            }

            @if (Model.LoadMore)
            {
                <button>LOAD MORE <i class="fa-solid fa-rotate-right"></i></button>
            }

        </div>
    </section>
   
}
